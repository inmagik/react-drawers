{
  "compilerOptions": {
    /* Compilation */
    "useDefineForClassFields": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "es2020",
    "declaration": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
  },
  "include": [
    "src"
  ]
}